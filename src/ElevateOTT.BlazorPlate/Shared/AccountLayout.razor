@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudRTLProvider RightToLeft="@IsRightToLeft">
    <MudLayout>
        <MudAppBar>
            <MudLink Href="/">
                <img height="36" width="36" src="/brand.svg" />
            </MudLink>
            <MudText Typo="Typo.h6" Class="ml-4" Style="letter-spacing: .5rem; font-weight: 300; margin-left: 12px; font-size: 24px; user-select: none;">BlazorPlate</MudText>
            <MudSpacer />
            <MudIconButton Color="Color.Inherit" OnClick="@((e) => DarkMode())" Size="Size.Medium" Icon="@(IsDarkMode ?"fa fa-sun-o":"fa fa-moon-o")" />
            <LanguageSwitcher />
        </MudAppBar>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
                <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px">
                    @Body
                </MudPaper>
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</MudRTLProvider>
