@page "/poc/authorization/serverSideAuthorization/EditApplicant/{applicantId}"

<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">@Resource.Edit_Applicant</MudText>
<ServerSideValidator @ref="ServerSideValidator" />
<EditForm Model="ApplicantForEditVm" OnValidSubmit="SubmitForm">
    <EditContextServerSideValidator @ref="EditContextServerSideValidator" />
    <FluentValidationValidator />
    <MudCard>
        <MudCardContent>
            <MudNumericField Label="@Resource.SSN" Variant="Variant.Outlined" @bind-Value="ApplicantForEditVm.Ssn" For="@(() => ApplicantForEditVm.Ssn)" />
            <MudTextField Label="@Resource.First_Name" Variant="Variant.Outlined" @bind-Value="ApplicantForEditVm.FirstName" For="@(() => ApplicantForEditVm.FirstName)" />
            <MudTextField Label="@Resource.Last_Name" Variant="Variant.Outlined" @bind-Value="ApplicantForEditVm.LastName" For="@(() => ApplicantForEditVm.LastName)" />
            <MudDatePicker Label="@Resource.Date_of_Birth" Variant="Variant.Outlined" @bind-Date="ApplicantForEditVm.DateOfBirth" For="@(() => ApplicantForEditVm.DateOfBirth)"
                           Rounded="true"
                           Elevation="12"
                           ShowWeekNumbers="true"
                           AllowKeyboardInput="true"
                           OpenTo="OpenTo.Year"
                           MaxDate="@DateTime.Now.AddYears(-18)" />
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@Resource.Body_Mass_Index</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="6">
                            <MudNumericField Label="@Resource.Height" Variant="Variant.Outlined" @bind-Value="ApplicantForEditVm.Height" For="@(() => ApplicantForEditVm.Height)" />
                            <MudNumericField Label="@Resource.Weight" Variant="Variant.Outlined" @bind-Value="ApplicantForEditVm.Weight" For="@(() => ApplicantForEditVm.Weight)" />
                            <MudNumericField Label="BMI" Variant="Variant.Outlined" @bind-Value="ApplicantForEditVm.Bmi" For="@(() => ApplicantForEditVm.Bmi)" Disabled="true" />
                            <br />
                            <MudAlert Elevation="2" Severity="Severity.Info">@Resource.BMI_Info</MudAlert>
                            <br />
                            <MudAlert Elevation="2" Severity="Severity.Info">@Resource.BMI_Details</MudAlert>
                        </MudItem>
                        <MudItem xs="6">
                            <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
                                <img width="95%" src="/images/bmi.jpg" />
                            </MudPaper>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudCardContent>
        <MudCardActions Class="pb-4 pl-4">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth="true">@Resource.Save</MudButton>
        </MudCardActions>
        <MudDivider />
        <MudExpansionPanels>
            <MudExpansionPanel Text="@Resource.Validation_Summary" IsExpanded="true" Disabled="true" HideIcon="true">
                <MudText Color="@Color.Error">
                    <ValidationSummary />
                </MudText>
            </MudExpansionPanel>
        </MudExpansionPanels>
    </MudCard>
</EditForm>
