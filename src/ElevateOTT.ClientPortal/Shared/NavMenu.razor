
<AuthorizeView>
    <Authorized>
        <PersonCard FullName="@context.User.Claims.FirstOrDefault(c=>c.Type == "FullName").Value"
                    AvatarUri="@context.User.Claims.FirstOrDefault(c=>c.Type == "AvatarUri").Value"
                    JobTitle="@context.User.Claims.FirstOrDefault(c=>c.Type == "JobTitle").Value"
                    Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text);" />
    </Authorized>
    <NotAuthorized>
        <MudHidden Breakpoint="Breakpoint.SmAndUp">
            <MudGrid>
                <MudItem xs="6">
                    <MudChip Link="/account/login" Icon="@Icons.Material.Filled.Login" Color="Color.Info">@Resource.Login</MudChip>
                </MudItem>
                <MudItem xs="6">
                    <MudChip Link="/account/register" Icon="@Icons.Material.Filled.PersonAdd" Color="Color.Success">@Resource.Register</MudChip>
                </MudItem>
            </MudGrid>
        </MudHidden>
    </NotAuthorized>
</AuthorizeView>

