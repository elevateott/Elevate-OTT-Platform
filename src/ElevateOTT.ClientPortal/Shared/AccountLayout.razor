@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudRTLProvider RightToLeft="@IsRightToLeft">
    <MudLayout>
        <MudAppBar>
            <AppLogo />
            <AppBrand />            
            <MudSpacer />
            <MudIconButton Color="Color.Inherit" OnClick="@((e) => DarkMode())" Size="Size.Medium" Icon="@(IsDarkMode ?"fa fa-sun-o":"fa fa-moon-o")" />
            <LanguageSwitcher />
        </MudAppBar>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
                <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px">
                    @Body
                </MudPaper>
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</MudRTLProvider>
