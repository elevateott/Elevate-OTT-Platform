@layout AccountLayout
@page "/account/ForgotPassword"

<ServerSideValidator @ref="ServerSideValidator" />
<EditForm Model="@ForgetPasswordCommand" OnValidSubmit="ForgetPassword">
    <EditContextServerSideValidator @ref="EditContextServerSideValidator" />
    <FluentValidationValidator />
    <MudText Typo="Typo.h4" GutterBottom="true">@Resource.Forgot_your_password</MudText>
    <MudText>@Resource.Enter_your_email</MudText>
    <MudTextField Label="@Resource.Email"
                  Variant="Variant.Outlined"
                  @bind-Value="ForgetPasswordCommand.Email"
                  For="@(() => ForgetPasswordCommand.Email)" />
    <MudDivider />
    <MudButton ButtonType="ButtonType.Submit"
               Style="margin-top: 4px"
               Variant="Variant.Filled"
               Color="Color.Primary"
               Size="Size.Large"
               FullWidth="true"
               Disabled="SubmitButtonDisabled">
        @Resource.Verify
    </MudButton>

    <MudExpansionPanels>
        <MudExpansionPanel Text="@Resource.Validation_Summary" IsExpanded="true" Disabled="true" HideIcon="true">
            <MudText Color="@Color.Error">
                <ValidationSummary />
            </MudText>
        </MudExpansionPanel>
        @if (SubmitButtonDisabled)
        {
            <MudProgressLinear Color="Color.Secondary" Indeterminate="true" Class="my-7" />
        }
    </MudExpansionPanels>
    <MudLink Href="/account/register">@Resource.Register</MudLink> | <MudLink Href="/account/login">@Resource.Sign_in</MudLink>
</EditForm>

